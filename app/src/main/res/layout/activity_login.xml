<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity"
    android:gravity="center"
    android:background="@color/colorRaisinBlack"
    >
    <ImageView
        android:id="@+id/stack_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stacklogo"

        />
    <TextView
        android:id="@+id/textView_StackName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/stack_imageView"
        android:text="Stack overflow"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:id="@+id/text_stackTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_StackName"
        android:text="Login to fully enjoy Stackoverflow's feature"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:textColor="@color/colorWhite"
        />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_stackTag"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrincetonOrange"
        android:text="Login to stack overflow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorWhite"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        />
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

    </WebView>
</RelativeLayout>